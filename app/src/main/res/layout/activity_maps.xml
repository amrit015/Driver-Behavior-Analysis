<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentStart="true">


        <EditText
            android:id="@+id/TF_location"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@drawable/edit_text_design"
            android:ems="15"
            android:inputType="textPersonName" />
    </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"

        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        tools:context="com.example.uttam.driver_behaviour.MainActivity"
        android:layout_below="@+id/linearLayout"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <Button
        android:id="@+id/B_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:background="@drawable/backblack"
        android:text="Search"
        android:textColor="@android:color/background_light"
        android:layout_marginEnd="34dp"
        android:layout_below="@+id/linearLayout"
        android:layout_toStartOf="@+id/B_to" />

    <Button
        android:id="@+id/B_to"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/backblack"
        android:onClick="onClick"
        android:text="Directions"
        android:textColor="@android:color/background_light"
        android:layout_marginEnd="54dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignEnd="@+id/B_start" />

    <Button
        android:id="@+id/B_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backblack"
        android:text="Start"
        android:textColor="@android:color/background_light"
        android:textSize="17sp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/B_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp"
        android:layout_marginStart="17dp"
        android:background="@drawable/backblack"
        android:onClick="back"
        android:text="Back"
        android:textColor="@android:color/background_light"
        android:visibility="gone" />

    <TextView
        android:id="@+id/speedLimit"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/B_to"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="250dp"
        android:alpha=".5"
        android:background="@drawable/shapeback"
        android:padding="20dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/currentSpeed"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_alignStart="@+id/speedLimit"
        android:layout_below="@+id/speedLimit"
        android:alpha=".5"
        android:background="@drawable/shape2"
        android:padding="20dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:visibility="gone" />

</RelativeLayout>
