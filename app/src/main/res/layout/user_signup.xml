<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trip"
    tools:context="com.example.uttam.driver_behaviour.Userlogin">

    <Button
        android:id="@+id/signUp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:text="SIGN UP"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imageView123"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView123"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:alpha="0.37"
        app:srcCompat="@drawable/backgreen"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp" />

    <ImageView
        android:id="@+id/imageView103"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:alpha="0.7"
        app:srcCompat="@drawable/backwhite"
        android:layout_alignTop="@+id/email"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView113"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:alpha="0.7"
        app:srcCompat="@drawable/backwhite"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView143"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:alpha="0.7"
        app:srcCompat="@drawable/backwhite"
        android:layout_alignTop="@+id/username"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Username"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/imageView103"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_alignTop="@+id/imageView113"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Email"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_above="@+id/imageView113"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48dp" />


</RelativeLayout>